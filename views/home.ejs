<% if(locals.user) { %>
    <link rel="stylesheet" href="/css/home.css">

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 users mt-5">
                <div class="list-group-flush mt-5">

                </div>
            </div>
            <div class="col-sm-6 main">

                <div class="card mt-5">
                    <div class="card-body">
                        <form class="form-group" action="/posts/create" id="new-post-form" method="POST">
                            <textarea class="form-control" name="content" placeholder="Create a new post" rows="3" required></textarea>
                            <!-- <div class="form-group mt-3">
                                <input class="form-control" name="" type="file">
                            </div> -->
                            <button type="submit" class="btn btn-success mt-3 float-end">Post</button>
                        </form>
                    </div>
                </div>

                <% if (posts.length == 0) { %>
                    <h3 class="text-center mt-4">
                        No Posts Yet! <i class="far fa-frown"></i></i>
                    </h3>
                <% } else { %>
                    <div class="list-group list-group-flush mt-4">
                        <% for (post of posts) { %>
                            <%- include('_post') -%>
                        <% } %>
                    </div>
                <% } %>
            </div>
            <div class="col-sm-3 users mt-5">
                <div class="list-group-flush mt-5">
                    <% for (u of users) { %> 
                        <%- include('_friend') -%>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

<% } else { %>
    <div class="row mt-5">
        <div class="col-md-6">
            <img src="/images/users.jpg" alt="Welcome to Connecti">
        </div>
        <div class="col-md-3 mt-5 offset-sm-2">
            <%- include('signIn') -%>
        </div>
    </div>
<% } %>



